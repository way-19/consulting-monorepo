modules = ["nodejs-18", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Marketing Site"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Client Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Consultant Dashboard"

[[workflows.workflow]]
name = "Marketing Site"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Client Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:client"
waitForPort = 5173

[[workflows.workflow]]
name = "Consultant Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:consultant"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 33125
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd apps/marketing && npx vite preview --host 0.0.0.0 --port 5000"]
build = ["npm", "run", "build"]
